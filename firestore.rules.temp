rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles temporaires pour permettre l'accès complet aux utilisateurs authentifiés
    // À utiliser uniquement pour la génération de données de démonstration
    // REMPLACER par firestore.rules après l'utilisation
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

